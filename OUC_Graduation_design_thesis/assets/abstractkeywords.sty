\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{assets/abstractkeywords}[2024/11/24 Abstract and Keyword Page]

%% Require cnabstract, cnkeyword, enabstract, enkeywords.

\RequirePackage{abstract}
\RequirePackage{times}

\newcommand{\cnabstractkeywords}[2]{
    \def\@cnabstract{#1}
    \def\@cnkeywords{#2}
}

\newcommand{\enabstractkeywords}[2]{
    \def\@enabstract{#1}
    \def\@enkeywords{#2}
}

\newcommand{\makeabstract}{
    \newpage
    \pagenumbering{Roman}
    \ifdefined\@cnabstract{
        \addcontentsline{toc}{nonumbersection}{摘要}
        \thispagestyle{zhabstract}
        \begin{center}
            \zihao{3}{\heiti{\@title}}%3号黑体
        \end{center}
        \renewcommand\abstractname{\zihao{3}{\heiti{摘\ \ \ 要}}}%3号黑体；三个字符间隔
        \begin{abstract}
            \zihao{-4}{\songti{\@cnabstract}}\par %小四；宋体
            \zihao{-4}{\heiti{\noindent 关键词：\textbf{\\ \@cnkeywords}}}%关键词三个字为加黑，关键词之间采用分号
        \end{abstract}
        \vspace{5mm}
        \newpage
    }
    \fi
    \ifdefined\@enabstract{
        \addcontentsline{toc}{nonumbersection}{Abstract}
        \thispagestyle{enabstract}
        \begin{center}
            \zihao{3}{\heiti{\textbf{\@entitle}}} %三号黑体
        \end{center}
        \renewcommand\abstractname{\zihao{3}{\heiti{Abstract}}}%三号黑体
        \begin{abstract}
            \zihao{4}{\fontfamily{ptm}\selectfont{\noindent \@enabstract}}\par %四号字体，Times New Roman字体
            \zihao{4}{\fontfamily{ptm}\selectfont{\noindent \textbf{\\ Keywords:\@enkeywords}}}
        \end{abstract}
    }
    \fi
    \newpage
}
